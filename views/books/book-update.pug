extends ../layout

block content
  h1 Update Book

  include book-validation

  form(method='POST' action='/books/' + book.id)
      p
        label(for='title') Title
        input#title.form-control(type='text', placeholder='Title' name='title' value=book.title)
      p
        label(for='author') Author
        input#author.form-control(type='text', placeholder='Author' name='author' value=book.author)
      p
        label(for='genre') Genre
        input#genre.form-control(type='text', placeholder='Genre' name='genre' value=book.genre)
      p
        label(for='year') Year
        input#year.form-control(type='text', placeholder='Year' name='year' value=book.year)
      p
        input(type='hidden' name='id' value=book.id)
        input.button(type='submit' value='Update Book')

  form(method='POST' action='/books/' + book.id + '/delete' onsubmit="return confirm('Do you really want to delete this book?');")
      p 
        a.button(href='/books') Cancel
      p 
        input.button(type='submit' value='Delete Book')
  </form>